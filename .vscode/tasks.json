{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Django Backend",
			"type": "shell",
			"command": "python",
			"args": [
				"manage.py",
				"runserver"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "Start Next.js Frontend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": []
		},
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "pip",
			"args": ["install", "-r", "requirements.txt"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			}
		},
		{
			"label": "Django Migrations",
			"type": "shell",
			"command": "python",
			"args": ["manage.py", "migrate"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "Create Django Superuser",
			"type": "shell",
			"command": "python",
			"args": ["manage.py", "createsuperuser"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		}
	]
}